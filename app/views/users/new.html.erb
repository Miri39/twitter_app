<% if flash[:error] %>
  <br/>
  <div class="alert alert-warning" role="alert">
        <%= flash[:error] %>
    </div>
<% end %>
<br/>

<div class="row justify-content-center">
  <div class="col-xs-12 col-sm-5">
    <% if @user.errors.present? %>
      <div class="alert alert-danger">
        <% @user.errors.full_messages.each do |error| %>
          <div>
            <%= error %>
          </div>
        <% end %>
      </div>
    <% end %>
    <%= form_for @user do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %><br />

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %><br />

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %><br />

      <%= f.label :gender %>
      <%= f.text_field :gender, class: 'form-control' %><br />

      <%= f.label :age %>
      <%= f.text_field :age, class: 'form-control' %><br />

      <%= f.label :phone_number %>
      <%= f.text_field :phone_number, class: 'form-control' %><br />

      <%= f.submit "Submit", class: "btn btn-primary"%>
      <%= link_to "Back", "/users", class: "btn btn-secondary" %>
    <% end %>
  </div>
</div>

